<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/smallBanner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                app:srcCompat="@drawable/logo3" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:textSize="20dp"
                android:textStyle="italic"
                android:text="Please fill in the following fields:"
                />

            <TextView
                android:id="@+id/com"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                style="@style/QRLabel2"
                android:text="COM Number:"
                />

            <Spinner
                android:id="@+id/COMSpinner"
                style="@style/QRLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_below="@id/com"
                android:gravity="center"
                />

            <Space
                android:id="@+id/space"
                android:layout_below="@id/txtResult3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"/>


            <TextView
                android:id="@+id/moduleName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                style="@style/QRLabel2"
                android:text="Module Name:"
                />

            <Spinner
                android:id="@+id/ModuleSpinner"
                style="@style/QRLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_below="@id/moduleName"
                android:gravity="center"
                />

            <Space
                android:id="@+id/space1"
                android:layout_below="@id/txtResult3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"/>


            <TextView
                android:id="@+id/lecturerName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                style="@style/QRLabel2"
                android:text="Lecturer Name:"
                />

            <TextView
                android:id="@+id/lecturerNameText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/QRLabel"

                />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                style="@style/QRLabel2"
                android:text="Date:"
                />

            <LinearLayout
                android:id="@+id/layoutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/datetext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/QRLabel"
                    />

                <Button
                    android:id="@+id/dateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/bottomBtn"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="Select Date" />

            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                style="@style/QRLabel2"
                android:text="Time:"
                />

            <LinearLayout
                android:id="@+id/layoutMiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/timetext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/QRLabel"
                    />

                <Button
                    android:id="@+id/timeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/bottomBtn"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="Select Time" />

            </LinearLayout>

            <Space
                android:id="@+id/space3"
                android:layout_below="@id/txtResult3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"/>

            <Button
                android:id="@+id/generatebtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                style="@style/qrCodeTxt"
                android:text="GENERATE QR CODE"/>

            <Space
                android:id="@+id/space4"
                android:layout_below="@id/txtResult3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
